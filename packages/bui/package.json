{
  "name": "@firstnoodle-ui/bui",
  "type": "module",
  "version": "0.0.54",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/firstnoodle-ui/bui.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.mjs"
    },
    "./components/*": {
      "types": "./dist/components/*/index.d.ts",
      "import": "./dist/components/*/index.d.ts"
    },
    "./composables/*": {
      "types": "./dist/composables/*.d.ts",
      "import": "./dist/composables/*.d.ts"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.d.ts"
    },
    "./bui.css": "./dist/bui.css",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && vue-tsc --declaration --emitDeclarationOnly -p tsconfig.app.json",
    "typecheck": "vue-tsc -p tsconfig.app.json --noEmit",
    "watch": "vite build --watch",
    "prepack": "pnpm run build",
    "release:publish": "pnpm publish --access public --otp=193361 --no-git-checks"
  },
  "peerDependencies": {
    "@floating-ui/core": "^1.7.3",
    "tailwindcss": "^4.1.1",
    "vue": "^3.5.13"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "@tiptap/extension-bold": "^2.11.7",
    "@tiptap/extension-bullet-list": "^2.11.7",
    "@tiptap/extension-document": "^2.11.7",
    "@tiptap/extension-heading": "^2.11.7",
    "@tiptap/extension-highlight": "^2.11.7",
    "@tiptap/extension-history": "^2.11.7",
    "@tiptap/extension-italic": "^2.11.7",
    "@tiptap/extension-link": "^2.11.7",
    "@tiptap/extension-list-item": "^2.11.7",
    "@tiptap/extension-ordered-list": "^2.11.7",
    "@tiptap/extension-paragraph": "^2.11.7",
    "@tiptap/extension-placeholder": "^2.11.7",
    "@tiptap/extension-text": "^2.11.7",
    "@tiptap/extension-underline": "^2.11.7",
    "@tiptap/vue-3": "^2.11.7",
    "debounce": "^2.2.0",
    "vue-router": "4"
  },
  "devDependencies": {
    "@floating-ui/core": "^1.7.3",
    "@tailwindcss/vite": "^4.1.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "sass-embedded": "^1.86.3",
    "tailwindcss": "^4.1.1",
    "typescript": "^5.8.2",
    "vite": "^6.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.13",
    "vue-tsc": "^2.2.8"
  }
}
